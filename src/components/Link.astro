---
import { c } from '@lib/utils'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<"a"> {
	external?: boolean;
	underlined?: boolean;
}

const {
	external = false,
	href,
	underlined = true,
	...attrs
} = Astro.props
---

<a
	class={c(underlined && "underline underline-offset-2")}
	href={href}
	target={ external ? "_blank" : "_self" }
	{...attrs}>
	<slot />
</a>
